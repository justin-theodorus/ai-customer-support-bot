# Environment Variables for AI Customer Support Bot
# Copy this file to .env and fill in your actual API keys

# Next.js Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Exa AI - Web scraping and search
EXA_API_KEY=your_exa_api_key_here

# Pinecone - Vector database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=aven-support-bot

# VAPI - Voice assistant
VAPI_PUBLIC_API_KEY=your_vapi_public_key_here
VAPI_PRIVATE_API_KEY=your_vapi_private_key_here
VAPI_ASSISTANT_ID=your_vapi_assistant_id_here

# OpenAI - Embeddings and LLM
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Optional: Additional configuration
LOG_LEVEL=info
MAX_CHUNK_SIZE=1200
CHUNK_OVERLAP=200 